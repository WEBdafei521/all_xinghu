page {
  width: 100%;
  background-color: #F8F8F8;
}
.edit_v {
  width: 100%;
  background-color: white;
}
.edit_v .itm {
  width: 696rpx;
  height: 70rpx;
  border-bottom: 1rpx solid #E3E3E3;
  margin-top: 20rpx;
  -webkit-box-align: center;
